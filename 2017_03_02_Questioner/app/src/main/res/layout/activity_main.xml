<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/activity_main"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:divider="@drawable/h_divider"
    android:showDividers="middle|end"

    android:orientation="vertical"

    tools:context="com.mysimpledream.a2017_03_02_questioner.MainActivity">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >


        <TextView
            android:text="Movie Reference"
            style="@style/TextViewTitle"
            android:id="@+id/textViewTitle" />
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <TextView
            android:text="Client Number: "
            style="@style/TextView"
            android:id="@+id/textViewClientNumber" />

        <EditText
            android:inputType="number"
            style="@style/EditText"
            android:text="0"
            android:ems="10"
            android:id="@+id/EditTextClientNumber" />

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <TextView
            android:text="Client email: "
            style="@style/TextView"
            android:id="@+id/textViewClientEmail" />

        <EditText
            android:inputType="textEmailAddress"
            style="@style/EditText"
            android:text=""
            android:ems="10"
            android:id="@+id/EditTextClientEmail" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" >

        <TextView
            android:text="Movie : "
            style="@style/TextView"
            android:id="@+id/textViewMovie"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="match_parent" >

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <RadioButton
                    android:text="Adventure"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButtonAdventure"
                    android:tag="adv"
                    android:layout_weight="1" />

                <RadioButton
                    android:text="Action"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButtonAction"
                    android:tag="action"
                    android:layout_weight="1" />

                <RadioButton
                    android:text="Comedy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButtonComedy"
                    android:tag="comedy"
                    android:layout_weight="1" />
            </RadioGroup>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3" >

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <Button
            android:text="Clear"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/ClearBtn"
            android:layout_weight="1" />

        <Button
            android:text="Add"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/AddBtn"
            android:layout_weight="1" />

        <Button
            android:text="Remove"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/RemoveBtn"
            android:layout_weight="1" />

        <Button
            android:text="Update Email"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/UpdateBtn"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp" >

        <Button
            android:text="Show All"
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ShowBtn"
            android:layout_weight="1" />
    </LinearLayout>


</LinearLayout>
